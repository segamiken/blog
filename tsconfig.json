{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */

    /* Module Resolution Options */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* For gatsby build*/
    "jsx": "react",

    "types": ["@emotion/react/types/css-prop"]
  }
}
